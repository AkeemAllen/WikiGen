{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["main", "modify-moveset-window"],
  "permissions": [
    "core:default",
    "core:webview:allow-create-webview-window",
    "core:webview:allow-webview-close",
    "core:window:allow-destroy",
    "core:window:allow-close",
    "process:default",
    "fs:default",
    "os:default",
    "fs:allow-resource-read-recursive",
    "fs:allow-resource-write-recursive",
    "sql:default",
    "updater:default",
    "store:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/**/*"
        },
        {
          "path": "$APPDATA/.venv"
        }
      ]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [
        {
          "path": "$APPDATA/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-read-recursive",
      "allow": [
        {
          "path": "$APPDATA/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-write-recursive",
      "allow": [
        {
          "path": "$APPDATA/**/*"
        }
      ]
    },
    {
      "identifier": "sql:allow-load",
      "allow": [
        {
          "path": "$APPDATA/**/*"
        }
      ]
    },
    {
      "identifier": "sql:allow-execute",
      "allow": [
        {
          "path": "$APPDATA/**/*"
        }
      ]
    },
    {
      "identifier": "updater:allow-check",
      "allow": [
        {
          "path": "$APPDATA/**/*"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": true,
          "name": "binaries/uv",
          "sidecar": true
        },
        {
          "args": true,
          "name": "python-check",
          "cmd": "python3"
        },
        {
          "args": true,
          "name": "start-virtual-env",
          "cmd": "source"
        },
        {
          "args": true,
          "name": "kill-mkdocs",
          "cmd": "pkill"
        },
        {
          "args": true,
          "name": "kill-mkdocs-win",
          "cmd": "taskkill"
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "args": true,
          "name": "binaries/uv",
          "sidecar": true
        },
        {
          "args": true,
          "name": "python-check",
          "cmd": "python3"
        },
        {
          "args": true,
          "name": "start-virtual-env",
          "cmd": "source"
        }
      ]
    },
    {
      "identifier": "shell:allow-open",
      "allow": [
        {
          "args": true,
          "name": "binaries/uv",
          "sidecar": true
        },
        {
          "args": true,
          "name": "python-check",
          "cmd": "python3"
        },
        {
          "args": true,
          "name": "start-virtual-env",
          "cmd": "source"
        }
      ]
    },
    {
      "identifier": "shell:allow-kill",
      "allow": [
        {
          "args": true,
          "name": "binaries/uv",
          "sidecar": true
        },
        {
          "args": true,
          "name": "python-check",
          "cmd": "python3"
        }
      ]
    }
  ]
}
